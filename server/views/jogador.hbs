<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="utf-8">
  <title>Geiser Games</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="shortcut icon" href="/favicon.png">
  <link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Abel|Sacramento">
  <link rel="stylesheet" href="/css/bootstrap.css">
  <link rel="stylesheet" href="/css/principal.css">
</head>
<body>
  <div class="container-fluid" id="site">
    <nav class="navbar navbar-inverse" role="navigation">
      <div class="container-fluid">
        <div class="navbar-header">
          <h1 class="page-brand"><a href="/">Geiser</a> <small> - seu computador a todo vapor</small></h1>
        </div>
        <ul class="nav navbar-nav">
          <li><a href="/">Inicial <span class="sr-only">(current)</span></a></li>
        </ul>
      </div>
    </nav>


    <div class="row" id="conteudo">
      <!-- Card de detalhes do jogador (esquerda) -->
      <div class="col-md-3">
        <div class="media-list">
          <div class="media player-card-stacked">
            <div class="media-middle" href="#">
              <img src="{{avatarmedium}}" class="avatar">
            </div>
            <div class="media-body">
              <h3 class="media-heading"><a href="/jogador/{{steamid}}/">{{personaname}}</a></h3>
              <dl class="dl-horizontal">
                <dt>Nome real:</dt><dd>{{realname}}</dd>
                <dt>País:</dt><dd>{{loccountrycode}}</dd>
                <dt>Perfil no steam:</dt><dd><a href="{{profileurl}}">@{{personaname}}</a></dd>
                <dt>Quantidade jogos:</dt><dd>{{game_count}}</dd>
                <dt>Não jogados:</dt><dd>{{never_played}}</dd>
              </dl>
            </div>
          </div>
        </div>
      </div>

      <!-- Card de detalhes do jogo mais jogado (direita) -->
      <div class="col-md-9">
        <div class="row-fluid">
          <h2>O jogo favorito</h2>
        </div>
        <div class="row-fluid">
          <div class="game-detailed-card media">
            <div class="media-left">
              <img src="{{favoriteGame.logo}}" class="game-logo">
            </div>
            <div class="media-body">
              <h4 class="media-heading">{{favoriteGame.name}}</h4>
              <dl class="dl-horizontal">
                <dt>Tempo de jogo:</dt><dd>{{favoriteGame.playtime_forever_hours}}h</dd>
                <dt>Estatísticas completas:</dt><dd>{{favoriteGame.statistics}}</dd>
              </dl>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Lista dos top 5 jogos mais jogados -->
    <div class="row-fluid">
      <div class="col-md-11 col-md-offset-1">
        <div class="row-fluid">
          <h2 class="most-5played-title">Top 5 jogos mais jogados</h2>
        </div>
        <div class="row-fluid">
          <ul class="col-md-12 games-card-list media-list">
            {{#each games}}
            <!-- Primeiro card de jogo -->
            <li class="media game-card">
              <div class="media-left media-middle">
                <img src="{{logo}}">
              </div>
              <div class="media-body media-middle">
                <h4>{{name}}</h4>
              </div>
              <div class="media-right media-middle">
                <span class="badge">{{playtime_forever_hours}}h</span>
              </div>
            </li>
            {{/each}}
            <!-- Próximo jogo aqui -->
          </ul>
        </div>
      </div>
    </div>
  </div>
</body>
</html>
